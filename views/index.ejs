<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Gallery</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
  <div class="container">
    <h1>Upload an Image</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-5">
      <div class="form-group">
        <label for="image">Choose an image:</label>
        <input type="file" id="image" name="image" accept="image/*" class="form-control-file" required>
      </div>
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>

    <h2>Image Gallery</h2>
    <div class="row">
      <% images.forEach(image => { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= image.imageUrl %>" class="card-img-top img-fluid" alt="Image">
          <div class="card-body">
            <h5 class="card-title">Image</h5>
            <a href="/upload/<%= image._id %>" class="btn btn-primary">View Filters</a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
